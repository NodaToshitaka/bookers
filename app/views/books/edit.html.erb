<div class="main">
 <h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <div class="error">

     <div class="error-top"> <%= @book.errors.count %>errors prohibited this book from being saved:</div>
     <ul class="error-message">
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>

   </div>
 <% end %>

 <div>
  <div class="submit-box">
    <%= form_with model:@book, url: update_book_path, local:true do |f| %>
       <div class="field">
        <% if @book.errors.any? %>
          <div class="field-error">Title</div>
          <div class="field-error"><%= f.text_field :title %></div>
        <% else %>
          <div class="field-ok">Title</div>
          <div class="field-ok"><%= f.text_field :title %></div>
        <% end %>
       </div>
       <div class="field">
        <% if @book.errors.any? %>
          <div class="field-error">Body</div>
          <div class="field-error"><%= f.text_area :body %></div>
        <% else %>
          <div class="field-ok">Body</div>
          <div class="field-ok"><%= f.text_area :body %></div>
        <%end %>
       </div>
       <span class="submit-bottom"><%= f.submit 'Update Book' %></span>
    <% end %>
  </div>
  <div class="bottom">
    <span class="bottom-c"><%= link_to "Show", book_path(@book.id) %></span>
    |
    <span class="bottom-c"><%= link_to "Back", books_path %></span>
  </div>
 </div>
</div>