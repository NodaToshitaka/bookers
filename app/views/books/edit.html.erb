<h1>Editing Book</h1>

<div class="error">
    <% if @book.errors.any? %>
     <span class="error-top"> <%= @book.errors.count %>errors prohibited this book from being saved:</span>
     <div class="error-message">
       <% @book.errors.full_messages.each do |message| %>
         <%= message %>
       <% end %>
     <% end %>
    </div>
</div>

<div>
  <div class="submit-box">
    <%= form_with model:@book, url: update_book_path, local:true do |f| %>
      <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Body</h4>
       <%= f.text_area :body %>
       <span class="submit-bottom"><%= f.submit 'Update Book' %></span>
    <% end %>
  </div>
  <div class="bottom">
    <span class="bottom-c"><%= link_to "Show", book_path(@book.id) %></span>
    <span class="bottom-c"><%= link_to "Back", books_path %></span>
  </div>
</div>